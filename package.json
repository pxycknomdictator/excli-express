{
  "name": "@excli/express",
  "version": "1.0.0",
  "main": "dist/main.js",
  "type": "module",
  "description": "A cli tool for creating Express.js applications, supporting both JavaScript and TypeScript.",
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch & node --watch dist/main.js",
    "start": "node dist/main.js",
    "prepublishOnly": "npm run build"
  },
  "keywords": [
    "express",
    "cli",
    "wizard",
    "express-generator",
    "nodejs",
    "typescript",
    "docker",
    "scaffolding",
    "express-setup"
  ],
  "bin": {
    "excli": "./dist/main.js"
  },
  "author": "Noman <pxycknomdictator@gmail.com>",
  "license": "ISC",
  "files": [
    "dist/",
    "templates/",
    "README.md",
    "LICENSE"
  ],
  "engines": {
    "node": ">=18.0.0"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/pxycknomdictator/excli-express.git"
  },
  "bugs": {
    "url": "https://github.com/pxycknomdictator/excli-express/issues"
  },
  "packageManager": "pnpm@10.12.1",
  "dependencies": {
    "@clack/prompts": "^0.11.0"
  },
  "devDependencies": {
    "@types/node": "^24.0.1",
    "prettier": "^3.5.3",
    "typescript": "^5.0.0"
  }
