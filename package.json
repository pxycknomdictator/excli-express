{
  "name": "@excli/express",
  "version": "1.0.4",
  "main": "dist/express.js",
  "type": "module",
  "types": "dist/express.d.ts",
  "description": "A cli tool for creating Express.js applications, supporting both JavaScript and TypeScript.",
  "scripts": {
    "ts": "tsc",
    "build": "vite build && npm run ts",
    "dev": "node --watch dist/express.js",
    "lint": "eslint src/**/*.ts",
    "start": "node dist/express.js",
    "lint:fix": "eslint src/**/*.ts --fix",
    "format": "prettier --write \"**/*.{ts,js,json,md}\"",
    "format:check": "prettier --check \"src/**/*.{ts,js,json}\"",
    "prepublishOnly": "npm run build",
    "prepare": "husky"
  },
  "keywords": [
    "express",
    "cli",
    "express-generator",
    "nodejs",
    "typescript",
    "docker",
    "vite",
    "express-setup"
  ],
  "bin": {
    "excli": "./dist/express.js"
  },
  "author": "Noman <pxycknomdictator@gmail.com>",
  "license": "ISC",
  "files": [
    "dist/",
    "templates/",
    "README.md",
    "LICENSE"
  ],
  "engines": {
    "node": ">=18.0.0"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/pxycknomdictator/excli-express.git"
  },
  "bugs": {
    "url": "https://github.com/pxycknomdictator/excli-express/issues"
  },
  "packageManager": "pnpm@10.12.1",
  "dependencies": {
    "@clack/prompts": "^0.11.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.29.0",
    "@types/node": "^24.0.1",
    "eslint": "^9.29.0",
    "globals": "^16.2.0",
    "husky": "^9.1.7",
    "prettier": "^3.5.3",
    "typescript": "^5.0.0",
    "typescript-eslint": "^8.34.1",
    "vite": "^6.3.5"
  }
}
